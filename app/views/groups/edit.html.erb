<%= form_for @group do |f| %>
	<article id="my_group">
		<h1>Meine Gruppe </h1>
		<dl class="dl-horizontal">
			<dt><%=@tutor.tutor? ? "Tutor" : "Dozent" %></dt>
			<dd><%=@tutor.name %> (<%=link_to @tutor.email, "mailto:#{@tutor.email}"%>)</dd>

			<dt>Kurs</dt>
			<dd><%=@group.course.course_name%></dd>

			<dt>Raum</dt>
			<dd><%=f.text_field :room %></dd>

			<dt>Aktuelle Informationen<br><i style="font-weight: normal; font-size: 0.8em">Formatierung mit <a href="http://daringfireball.net/projects/markdown/syntax">Markdown</a></i></dt>
			<dd><%=f.text_area :group_information %></dd>

			<dt>Teilnehmer</dt>
			<dd>
				<table class="table table-striped table-condensed">
					<tr>
						<th>Anwesend</th>
						<th>Name</th>
						<th>E-Mail</th>
					</tr>
					 <%=f.fields_for :users do |user_f| %>
						<tr>
							<td><%=user_f.check_box :present%></td>
							<td><%=user_f.text_field :name%></td>
							<td><%=user_f.text_field :email%></td>
						</tr>
					<% end %>
				</table>
			</dd>
			<dd><%= f.submit "Ã„nderungen Speichern", :class => "btn btn-primary" %></dd>
		</dl>
	</article>
<%end%>