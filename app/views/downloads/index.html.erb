<section id="downloads" class="centered">
  <h1>Downloads</h1>
  <%="Es wurden noch keine Dokumente zur VerfÃ¼gung gestellt." if @downloads.empty?%>
  <% @downloads.each do |download| %>
    <%= render download %>
  <% end %>
</section>

<section id="uploads" class="centered">
	<h2>Uploads</h2>
	<%=form_for @upload, :html => {:multipart => true} do |f| %>
		<%=f.label :name do %>
			Name: <%=f.text_field :name %>
		<%end%>
		<%=f.label :file do %>
			file: <%=f.file_field :file %>
		<%end%>
		<%=f.submit "Upload"%>
	<% end %>
</section>
